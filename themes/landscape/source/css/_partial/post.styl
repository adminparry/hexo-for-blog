
.description
    font-size:20px

.first-post
    margin-top 70px

.last-post
    margin-bottom 125px

    
.pagination-div 
    margin-bottom 125px
    opacity .8
    text-align center
    overflow hidden
    
.pagination-div .page-number
    display inline-block
    
.pagination-div span
    color #ff0033
    
.pagination-div a
    color #ff7800

.pagination-div span, .pagination-div a
    padding 0.5em 1em
    
.pagination-div .prev
    float left
    
.pagination-div .next
    float right
.jumbotron
    transition:all .2s ease 0s;
    -moz-transition:all .2s ease 0s, -moz-transform .2s; /* Firefox 4 */
    -webkit-transition:all .2s ease 0s, -webkit-transform .2s; /* Safari and Chrome */
    -o-transition:all .2s ease 0s, -o-transform .2s; /* Opera */

.jumbotron:hover
    box-shadow: inset 0px 0px 30px red;
    transform:translateY(-4px);
    -moz-transform:translateY(-4px); /* Firefox 4 */
    -webkit-transform:translateY(-4px); /* Safari and Chrome */
    -o-transform:translateY(-4px); /* Opera */

.jumbotron h1
  font-size:40px 

.post
    width: 80%;
    font-family font-post-title
    opacity: 0;
    transform:translateY(24px);
    -moz-transform:translateY(24px); /* Firefox 4 */
    -webkit-transform:translateY(24px); /* Safari and Chrome */
    -o-transform:translateY(24px); /* Opera */

    transition:opacity 1s, height 1s;
    -moz-transition:opacity 1s, height 1s, -moz-transform 1s; /* Firefox 4 */
    -webkit-transition:opacity 1s, height 1s, -webkit-transform 1s; /* Safari and Chrome */
    -o-transition:opacity 1s, height 1s, -o-transform 1s; /* Opera */

.post h1
    font-weight bold

.post h1 a 
    color #333

.post h1 a:hover
    text-decoration none
    color #FF0033

.index-post-avatar
    width 32px
    height 32px
    position relative
    top -2px

.say-title
    text-align right

.say-title a 
    color #ff7800

.say-title a:hover
    color #ff0033

.post-body a
    color #ff7800

.post-body a:hover
    color #ff0033
    
.time-info
    text-align right
    border-bottom 1px dotted #e4e4e4
    margin-bottom 15px

.highlight
  background highlight-background
  margin 0.5em 0
  padding 1em 2%
  overflow auto
  color highlight-foreground
  line-height line-height
  font-size font-size
  border-radius 4px
  
.highlight table
    padding 0
  
.highlight pre
    background none
    border none
    color #c5c8c6
    padding 5px
    margin 0
.highlight .gutter pre
    color #666